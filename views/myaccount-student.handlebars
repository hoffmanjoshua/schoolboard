<div class="container mt-5 pl-4">
    <h1 class="text-center">My
        <span class="font-weight-bold">Student</span> Account</h1>
    <br>
    <h2>Schools</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">School</th>
                <th scope="col">Location</th>
            </tr>
        </thead>
        <tbody>
            {{#each student.schoolsFollowing}}â€‹
            <tr>
                <th scope="row"><a href="{{this.path}}">{{this.name}}</a></th>
                <td>{{this.location}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <br>
    <h2>Profile &amp; Settings</h2>
    <form class="form">
        Name:
        <input class="form-control" type="text" name="Name" value="{{student.name}}" id="name">
        <br> Current year in High School:
        <input class="form-control" name="HSYear" type="text" value="{{student.HSyear}}">
        <br> High School:
        <input class="form-control" type="text" name="HighSchool" value="{{student.HighSchool}}">
        <br> Expected year of admission:
        <input class="form-control" name="admissionYear" type="text" value="{{student.admissionYear}}">
        <br> Email:
        <input class="form-control" type="email" value="{{student.email}}" name="Email">
        <br>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
    <form method="post" action="/logout">
        <input class="form-control" type="submit" value="Logout" name="logout" style="margin: auto;">
    </form>
</div>