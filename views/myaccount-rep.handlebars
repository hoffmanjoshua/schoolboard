<div class="container mt-5 pl-4">
    <h1 class="text-center">My
        <span class="font-weight-bold">Representative</span> Account</h1>
    <br>
    <h2>Write Post</h2>
    <form>
        Title:
        <input class="form-control" type="text" name="Title">
        <br> Post:
        <textarea class="form-control" name="content"></textarea>
        <br>
        <button type="submit" class="btn btn-primary">Post</button>
    </form>
    <br>
    <h2>Approve Posts</h2>
    {{#each posts}}
    <div class="jumbotron">
        <h3>{{this.title}}</h3>
        <h4>{{this.author}}</h4>
        <p>{{this.content}}</p>
    </div>
    {{/each}}
    <form>
        <button type="submit" class="btn btn-primary">Approve</button>
    </form>
    <br>
    <h2>Profile &amp; Settings</h2>
    <form class="form" name="form" action="/updaterep" method="post">
        Name:
        <input class="form-control" type="text" name="Name" value="{{rep.name}}">
        <br> School:
        <input type="text" name="school" class="form-control" value="{{rep.school}}" readonly>
        <br> Role/title:
        <input class="form-control" type="text" name="Role" value="{{rep.role}}">
        <br> Bio:
        <textarea class="form-control" name="Bio">{{rep.bio}}</textarea>
        <br> Email:
        <input class="form-control" name="Email" value="{{rep.email}}">
        <br>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
    <br>
    <br>
    <form method="post" action="/logout">
        <input class="btn btn-secondary" type="submit" value="Logout" name="logout">
    </form>
</div>